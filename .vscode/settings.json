{
    // https://github.com/davidquinn/psi-header/tree/main/src
    "psi-header.config": {
        "forceToTop": true,
        "blankLinesAfter": 1,
        "spacesBetweenYears": false,
        "license": "Custom",
        "author": "Corey White",
        "projectname": "django-actinia",
        "company": "OpenPlains",
        "initials": "CW",
        "authorEmail": "smortopahri@gmail.com",
        "copyrightHolder": "Corey White",
        "creationDateZero": "now",
        // "hostname": "myhostname"
    },
    "psi-header.changes-tracking": {
        "isActive": true,
        "modAuthor": "Modified By:",
        "modDate": "Last Modified:",
        "modDateFormat": "dd/MM/yyyy hh:nn:ss",
        "include": [],
        "includeGlob": [],
        "exclude": ["markdown", "json", "jsonc", "shellscript", "txt"],
        "excludeGlob": ["./**/*/ignoreme.*"],
        "autoHeader": "autoSave",
        "enforceHeader": false,
        "replace": [
            "Filename:",
            "Project"
        ],
        "updateLicenseVariables": false
    },
    "psi-header.lang-config": [
        {
            "language": "*",
            "begin": "/*",
            "prefix": " * ",
            "suffix": "",
            "lineLength": 80,
            "end": " */",
            "forceToTop": true,
            "blankLinesAfter": 2,
            "beforeHeader": [],
            "afterHeader": [],
            "rootDirFileName": "package.json",
            "modAuthor": "Modified By:",
            "modDate": "Last Modified:",
            "modDateFormat": "dd/MM/yyyy hh:nn:ss",
            "exclude": ["markdown", "json", "jsonc", "shellscript", "txt"],
            "replace": [
                "Filename:",
                "Project"
            ],
            "ignoreLines": []
        },
         // {
        //     "language": "typescript",
        //     "mapTo": "javascript"
        // },
        {
            "language": "python",
            "begin": "###############################################################################",
            "prefix": "# ",
            "suffix": "#",
            "lineLength": 80,
            "end": "###############################################################################",
            "forceToTop": true,
            "blankLinesAfter": 2,
            "beforeHeader": [],
            "afterHeader": [],
            "modAuthor": "Modified By:",
            "modDate": "Last Modified:",
            "modDateFormat": "dd/MM/yyyy hh:nn:ss",
            "exclude": ["markdown", "json", "jsonc", "shellscript", "txt"],
            "replace": [
                "Project",
                "Author"
            ],
            "ignoreLines": []
        },
    ],
    "psi-header.templates": [
        {
            "language": "javascript",
            "template": [
                "Filename: <<filename>>",
                "Project: <<company>>",
                "File Created: <<filecreated('dddd MMMM Do YYYY')>>",
                "Author: <<author>> (<<authorEmail>>)",
                "Maintainer: <<author>>",
                "-----",
                "Last Modified: <<date>>",
                "Modified By: <<author>>",
                "-----",
                "License: GPLv3",
                "",
                "Copyright (c) <<yeartoyear(fc, now)>> <<company>>",
                "",
                "<<licensetext>>",
            ],
            "changeLogCaption": "HISTORY",
            "changeLogHeaderLineCount": 2,
            "changeLogEntryTemplate": [
                "",
                "<<dateformat(DD-MM-YYYY)>>\t<<initials>>\t"
            ],
            "changeLogNaturalOrder": false,
            "changeLogFooterLineCount": 0
        },
        // {
        //     "language": "typescript",
        //     "mapTo": "javascript"
        // },
        {
            "language": "python",
            "template": [
                "Filename: <<filename>>",
                "Project: <<company>>",
                "File Created: <<filecreated('dddd MMMM Do YYYY')>>",
                "Author: <<author>> (<<authorEmail>>)",
                "Maintainer: <<author>>",
                "-----",
                "Last Modified: <<date>>",
                "Modified By: <<author>>",
                "-----",
                "License: GPLv3",
                "",
                "Copyright (c) <<yeartoyear(fc, now)>> <<company>>",
                "",
                "<<licensetext>>",
            ],
            "changeLogCaption": "HISTORY",
            "changeLogHeaderLineCount": 2,
            "changeLogEntryTemplate": [
                "",
                "<<dateformat(DD-MM-YYYY)>>\t<<initials>>\t"
            ],
            "changeLogNaturalOrder": false,
            "changeLogFooterLineCount": 0
        }
    ],
